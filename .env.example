# CEDA Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=production
PORT=3030

# OpenAI API Key (required for AI-powered features)
OPENAI_API_KEY=your_openai_api_key_here

# Qdrant Vector Database URL (optional - for semantic pattern matching)
QDRANT_URL=http://localhost:6333

# Herald MCP Configuration (optional - for remote Herald client)
HERALD_API_URL=https://your-deployment-url.com
HERALD_API_USER=user
HERALD_API_PASS=your_password_here

# JWT Authentication (CEDA-70)
# REQUIRED in production - generate with: openssl rand -hex 32
JWT_ACCESS_SECRET=your_access_secret_here_min_32_chars
JWT_REFRESH_SECRET=your_refresh_secret_here_min_32_chars
JWT_ACCESS_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=ceda.getceda.com
JWT_AUDIENCE=ceda-api

# Upstash Redis (CEDA-67: Adaptive State Persistence)
# Get from https://console.upstash.com/
UPSTASH_REDIS_REST_URL=https://your-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_token_here
