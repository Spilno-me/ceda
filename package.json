{
  "name": "@spilno/ceda",
  "version": "1.20.0",
  "description": "Cognitive Event-Driven Architecture - AI-native copilot layer",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "serve": "ts-node src/server.ts",
    "serve:prod": "node dist/server.js",
    "herald": "ts-node src/mcp/herald.ts",
    "herald:prod": "node dist/mcp/herald.js",
    "herald:init": "ts-node src/mcp/herald-init.ts",
    "seed": "ts-node src/scripts/seed-patterns.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "cognitive",
    "ai",
    "copilot",
    "event-driven"
  ],
  "author": "Spilno",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "@qdrant/js-client-rest": "^1.16.2",
    "bcrypt": "^6.0.0",
    "drizzle-orm": "^0.45.1",
    "jsonwebtoken": "^9.0.3",
    "openai": "^6.16.0",
    "pg": "^8.17.1",
    "postgres": "^3.4.8",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.0",
    "stripe": "^20.2.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^11.0.0",
    "@types/bcrypt": "^6.0.0",
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.0.0",
    "@types/pg": "^8.16.0",
    "@types/uuid": "^10.0.0",
    "drizzle-kit": "^0.31.8",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.7.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
